mixin nav-link(href, name)
  if name === title
    li.nav-item
      a.nav-link.active(aria-current='page' href=href)= name
  else
    li.nav-item
      a.nav-link(href=href)= name

block nav
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    .container-fluid
      a.navbar-brand(href='/') #{title}
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          +nav-link('/login', 'Login')
          +nav-link('/register', 'Register')
          +nav-link('/home', 'Home')

      if username
        .nav-item
          .nav-link(href='/home' role='button')
            img.rounded-circle(width='48' height='48' src='https://robohash.org/' + username)
